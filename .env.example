# .env.example
# Environment variables for the ATS application
# Copy this file to .env and fill in your values

# Server settings
PORT=3001
NODE_ENV=development

# API Security
API_KEY=your-api-key-here

# Firebase credentials
# Option 1: Base64 encoded service account JSON
FIREBASE_CREDENTIALS_BASE64=

# Option 2: Path to service account JSON file
FIREBASE_CREDENTIAL_JSON=path/to/service-account.json

# Email service settings
EMAIL_SENDER_NAME=ATS System
EMAIL_SENDER_ADDRESS=ats@example.com
EMAIL_ENCRYPTION_KEY=your-encryption-key-here

# Gmail OAuth (if using Gmail API instead of IMAP)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:3001/auth/gmail/callback
GMAIL_REFRESH_TOKEN=

# IMAP settings (for default email account)
IMAP_HOST=
IMAP_PORT=993
IMAP_USER=
IMAP_PASSWORD=

# Resume parsing settings
OPENAI_API_KEY=your-openai-api-key-here

# Resend email integration (for sending emails)
RESEND_API_KEY=your-resend-api-key-here

# Frontend URL for links in emails
APP_URL=http://localhost:3000